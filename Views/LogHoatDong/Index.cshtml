@model List<NailMVC.Models.LogHoatDong>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">📋 Nhật ký hoạt động</h2>

<form method="get" class="row g-3 mb-3">
    <div class="col-md-3">
        <label>Từ ngày</label>
        <input type="date" name="from" class="form-control" value="@ViewBag.From" />
    </div>
    <div class="col-md-3">
        <label>Đến ngày</label>
        <input type="date" name="to" class="form-control" value="@ViewBag.To" />
    </div>
    <div class="col-md-3 align-self-end">
        <button type="submit" class="btn btn-primary">🔍 Lọc</button>
    </div>
</form>

<table class="table table-bordered table-striped text-center">
    <thead class="table-dark">
        <tr>
            <th>Thời gian</th>
            <th>Người dùng (ID)</th>
            <th>Hoạt động</th>
            <th>IP</th>
            <th>Trình duyệt</th>
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.ThoiGian.ToString("dd/MM/yyyy HH:mm:ss")</td>
                <td>@log.TaiKhoanId</td>
                <td>@log.HoatDong</td>
                <td>@log.DiaChiIP</td>
                <td>@log.TrinhDuyet</td>
                <td>@log.DuLieuThem</td>
            </tr>
        }
    </tbody>
</table>
